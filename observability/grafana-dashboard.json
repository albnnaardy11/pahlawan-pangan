  "panels": [
    {
      "title": "Surplus Claim Latency (P95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(surplus_claim_latency_seconds_bucket[5m])))",
          "legendFormat": "Claim Latency (P95)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "line", "lineInterpolation": "smooth", "fillOpacity": 20 }
        }
      }
    },
    {
      "title": "Food Waste Prevented (Total Tons)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(food_waste_prevented_tons_total)",
          "legendFormat": "Total Tons"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 100 }
            ]
          }
        }
      }
    },
    {
      "title": "Matching Engine Saturation",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "avg(matching_engine_saturation_ratio)",
          "legendFormat": "Saturation"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "title": "Historical Donation Sharding Heatmap",
      "type": "heatmap",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum by (shard_id) (rate(surplus_claim_count[10m]))",
          "format": "heatmap"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "color": { "mode": "palette-classic" } }
        }
      }
    }
